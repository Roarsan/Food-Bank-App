@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 text-left">
            <!-- Logo Section at the top Left corner -->
            <img src="@Url.Content("~/images/FoodBankLogo.jpg")" alt="Your Food Bank Logo" class="img-fluid smaller-logo" />
        </div>
        <!-- Welcome page title -->
        <div class="col-md-6 text-center">
            <div class="jumbotron">
                <h1 class="green-heading">Welcome to Buckinghamshire FoodBank</h1>
                <p>Empowering communities, one meal at a time.</p>
                <p>At Buckinghamshire FoodBank, we believe in the transformative power of food. 
                   We recognize that access to nutritious meals is fundamental to individual well-being and community strength. 
                   Our dedicated team works tirelessly to ensure that no one in our community goes hungry.</p>
            </div>
        </div>
        <div class="col-md-3 text-right mt-3">
            <!-- Search Section -->
            <form action="/FoodBank/Find" method="get">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search Foodbank" name="location" required>
                    <button class="btn btn-success" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap carousel with three slides  -->
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="@Url.Content("~/images/one_can_trust.jpg")" class="d-block w-100" alt="One Can Trust">
                    <div class="carousel-caption d-none d-md-block">
                        <a class="text-light text-decoration-none" href="https://onecantrust.org.uk/">One Can Trust <i class="bi bi-link"></i></a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img style="max-height: 70vh;" src="@Url.Content("~/images/community_fridge.jpg")" class="d-block w-100" alt="Wycombe Community Fridge">
                    <div class="carousel-caption d-none d-md-block">
                        <a class="text-light text-decoration-none" href="https://www.neighbourly.com/project/5d46c766c7ac892f406642d8">Wycombe Community Fridge <i class="bi bi-link"></i></a>
                    </div>
                </div>
                <div class="carousel-item">
                    <img style="max-height: 70vh;" src="@Url.Content("~/images/food_hub.jpg")" class="d-block w-100" alt="Wycombe Food Hub">
                    <div class="carousel-caption d-none d-md-block">
                        <a class="text-light text-decoration-none" href="https://wycombefoodhub.org/">Wycombe Food Hub <i class="bi bi-link"></i></a>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>